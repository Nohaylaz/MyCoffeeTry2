<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#EBEED9D2"
    android:orientation="vertical"
    android:padding="15dp">


    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="Everything your city holds is here !"
        android:textColor="#090808"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/menu_slogan"
        android:fontFamily="@font/comfortaa_light"
        android:text="CoffeeHDAK"
        android:textColor="@color/colorBlack"
        android:textSize="26sp" />

    <ImageView
        android:layout_width="115dp"
        android:layout_height="120dp"
        android:layout_above="@id/app_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="203dp"
        android:layout_marginBottom="76dp"
        android:src="@drawable/logoloc" />


</RelativeLayout>